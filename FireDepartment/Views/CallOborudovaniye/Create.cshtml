@model FireDepartment.Models.CallOborudovaniye

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CallId" class="control-label"></label>
                <select asp-for="CallId" class ="form-control" asp-items="ViewBag.CallId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OborudovaniyeId" class="control-label"></label>
                <select asp-for="OborudovaniyeId" class ="form-control" asp-items="ViewBag.OborudovaniyeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
