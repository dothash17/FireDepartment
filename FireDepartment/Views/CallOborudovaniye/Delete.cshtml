@model FireDepartment.Models.CallOborudovaniye

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Call)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Call.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Oborudovaniye)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Oborudovaniye.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CallId" />
        <input type="hidden" asp-for="OborudovaniyeId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
